@using Hotel.Models.Models
@model Hotel.Models.Models.Workers

@{
    ViewData["Title"] = "Worker Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Worker Details</h2>

    <div class="card p-4 shadow-sm">
        <div class="row">
            <!-- Worker ID -->
            <div class="col-md-6">
                <label class="fw-bold">Worker ID</label>
                <div class="form-control bg-light">@Model.ID</div>
            </div>

            <!-- Worker Name -->
            <div class="col-md-6">
                <label class="fw-bold">Worker Name</label>
                <div class="form-control bg-light">@Model.Name</div>
            </div>
        </div>

        <div class="row mt-3">
            <!-- Availability Status -->
            <div class="col-md-6">
                <label class="fw-bold">Availability Status</label>
                <div class="form-control bg-light">
                    @if (Model.Availability == WorkerStatus.Available)
                    {
                        <span class="text-success">● Available</span>
                    }
                    else
                    {
                        <span class="text-danger">● Unavailable</span>
                    }
                </div>
            </div>

            <!-- Room Number -->
            <div class="col-md-6">
                <label class="fw-bold">Room Number</label>
                <div class="form-control bg-light">@Model.RoomNumber</div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            Last updated: @DateTime.Now.ToString("MMM dd, yyyy 'at' hh:mm tt")
        </div>

        <div class="mt-4 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-secondary">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-outline-danger">
                <i class="bi bi-trash3"></i> Delete
            </a>
        </div>
    </div>
</div>
