@using Hotel.Models.Models
@model Hotel.Models.Models.Workers
@{
    ViewData["Title"] = "Add Worker";
}
<div class="container mt-5">
    <h2 class="mb-4">Add New Worker</h2>

    <form method="post" asp-action="Add">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Provide Details of Worker</h5>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Assign Room</label>
                    <div class="col-sm-10">
                        <div class="mb-3">
                            <label asp-for="RoomId"></label>
                            <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-control">
                                <option value="">-- Select Room --</option>
                            </select>>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Status</h5>
            </div>
            <div class="card-body">
                <div class="card-body">
                    <input type="hidden" asp-for="Availability" value="@WorkerStatus.Available" />
                    <div class="text-success">Status: Available</div>
                </div>
            </div>
        </div> 

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-outline-secondary" asp-action="Workers">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button> <!-- Changed to proper submit button -->
        </div>
    </form>
</div>