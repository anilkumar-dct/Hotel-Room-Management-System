@using Hotel.Models.Models
@model Hotel.Models.Models.Workers

@{
    ViewData["Title"] = "Edit Worker";
}

<div class="container mt-4">
    <h2 class="mb-4">Edit Worker</h2>

    <form asp-action="Edit" asp-controller="Workers" method="post">
        <input type="hidden" asp-for="ID" />

        <!-- Worker Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter worker's name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Worker Status (Dropdown for Enum) -->
        <div class="mb-3">
            <label asp-for="Availability" class="form-label">Status</label>
            <select asp-for="Availability" asp-items="Html.GetEnumSelectList<WorkerStatus>()" class="form-select"></select>
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <!-- Room Number -->
        <div class="mb-3">
            <label asp-for="RoomId" class="form-label">Room Number</label>
            <select asp-for="RoomId" asp-items="ViewBag.RoomList" class="form-select">
                <option value="">-- Select Room --</option>
            </select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Changes
            </button>
            <a asp-action="Workers" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
