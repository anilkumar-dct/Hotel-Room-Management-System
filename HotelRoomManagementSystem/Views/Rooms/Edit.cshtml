@model Hotel.Models.Models.Rooms

@{
    ViewData["Title"] = "Edit Room Status";
}

<div class="container mt-4">
    <h2 class="mb-3">Edit Room Status</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="mb-3">
            <label class="form-label fw-bold">Room Number</label>
            <input type="text" class="form-control" asp-for="RoomNumber" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Status</label>
            <select class="form-select" asp-for="Status" asp-items="@(new SelectList(Enum.GetValues(typeof(Hotel.Models.Models.RoomStatus))))" required>
                <option value="">-- Update Status --</option>
            </select>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
            <a asp-action="Rooms" class="btn btn-secondary" ><i class="bi bi-arrow-left"></i> Back</a>
        </div>
    </form>
</div>
